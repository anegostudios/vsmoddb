UPDATE users
	SET hash = UNHEX(SUBSTRING(SHA2(CONCAT(userId, created), 512), 1, 20))
	WHERE hash = UNHEX('00000000000000000000');

UPDATE comments
	SET text = REGEXP_REPLACE(text, '00000000000000000000', CONCAT(SUBSTRING(SHA2(CONCAT(userId, created), 512), 1, 20)))
	WHERE text LIKE '%00000000000000000000"%';
